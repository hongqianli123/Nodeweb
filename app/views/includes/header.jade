.navbar.navbar-default
	.container-fluid
		.navbar-header
			button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar-mobile")
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href="/") Imovie
		#navbar-mobile.collapse.navbar-collapse
			ul.nav.navbar-nav.navbar-right
				if user
					li
						a.navbar-link(href="#") I'm&nbsp;#{user.name}
					li
						a.navbar-link(href="/logout") 退出
				else
					li
						a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal") 注册
					li
						a.navbar-link(href="#", data-toggle="modal", data-target="#loginModal") 登陆		

#signupModal.modal.fade
	.modal-dialog.modal-sm
		.modal-content
			form#signup(method="post", action="/user/signup")
				.modal-header.text-center 注&nbsp;册
				.modal-body
					.form-group
						label(for="signName") 用户名
						input#signName.form-control(name="user[name]", type="text")
						span.label.label-info
					.form-group
						label(for="signPassword") 密码
						input#signPassword.form-control(name="user[password]", type="password")
				.modal-footer
					button.btn.btn-default(type="button", data-dismiss="modal") 关闭	
					button.signsub.btn.btn-success(type="submit") 提交

#loginModal.modal.fade
	.modal-dialog.modal-sm
		.modal-content
			form#login(method="post", action="/user/login")
				.modal-header.text-center 登&nbsp;陆
				.modal-body
					.form-group
						label(for="signName") 用户名
						input#signName.form-control(name="user[name]", type="text")
					.form-group
						label(for="signPassword") 密码
						input#signPassword.form-control(name="user[password]", type="password")
				.modal-footer
					button.btn.btn-default(type="button", data-dismiss="modal") 关闭	
					button.loginsub.btn.btn-success(type="submit") 提交

.container
	.row
		.page-header
			h2 #{title}							