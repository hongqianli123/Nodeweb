extends ../layout

block content
	.container
		.row
			.col-md-5
				form#signup(method="post", action="/user/signup")
					.modal-body
						.form-group
							label(for="signName") 用户名
							input#signName.form-control(name="user[name]", type="text")
							span.label.label-info
						.form-group
							label(for="signPassword") 密码
							input#signPassword.form-control(name="user[password]", type="password")
					.modal-footer
						button.btn.btn-default(type="button", data-dismiss="modal") 关闭	
						button.signsub.btn.btn-success(type="submit") 提交