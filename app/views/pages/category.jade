extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="post", action="/movie/category/new")
				.form-group
					label.col-sm-2.control-label(for="inputCategory") 电影分类设置
					.col-sm-6
						input#inputCategory.form-control(type="text", name="category[name]", placeholder="请输入需要建立的电影分类", value=category.name)
					.col-sm-2				
						button.btn.btn-primary(type="submit") 录入
